    <TextView
        android:id="@+id/textView14"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:text="Free"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
